datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int             @id @default(autoincrement())
  name     String
  email    String          @unique
  role     String
  password String
  clubs    UserClub[]
  events   Participation[]
}

model Club {
  id          Int          @id @default(autoincrement())
  name        String
  phoneNumber String?     
  city        String       
  address     String?      
  description String?      
  website     String?      
  events      Event[]
  users       UserClub[]
  articles    Article[]
}
model Event {
  id          Int             @id @default(autoincrement())
  name        String
  startDate   DateTime
  endDate     DateTime
  places      String
  address     String?         
  city        String?         
  country     String?         
  eventType   String?        
  clubId      Int
  club        Club            @relation(fields: [clubId], references: [id])
  articles    Article[]
  users       Participation[]
  description String?       
}

model UserClub {
  userId   Int
  clubId   Int
  joinDate DateTime
  role     String
  user     User     @relation(fields: [userId], references: [id])
  club     Club     @relation(fields: [clubId], references: [id])

  @@id([userId, clubId])
}

model Article {
  id      Int    @id @default(autoincrement())
  title   String
  content String
  clubId  Int
  eventId Int
  club    Club   @relation(fields: [clubId], references: [id])
  event   Event  @relation(fields: [eventId], references: [id])
}

model Participation {
  userId  Int
  eventId Int
  user    User  @relation(fields: [userId], references: [id])
  event   Event @relation(fields: [eventId], references: [id])

  @@id([userId, eventId])
}
